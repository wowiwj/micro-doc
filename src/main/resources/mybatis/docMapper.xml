<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wangju.microdoc.domain.DocRepository">

    <sql id="base_column_list">
        id,
        name,
        brief,

        header_url
        as
        headerUrl,

        user_id
        as
        userId,

        delete_at
        as
        deleteTime,

        create_time
        as
        createTime,

        update_time
        as
        updateTime
    </sql>

    <select id="all" resultType="wangju.microdoc.domain.Doc">
        select
        <include refid="base_column_list"/>
        from "doc"
    </select>
</mapper>